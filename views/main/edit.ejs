<% layout('layouts/layout') -%>
<div class="form-control">
    <form class="col row align-items-center ms-3 ps-3" action="/campgrounds/<%= ground._id%>?_method=patch" method = "post">
            <div class="mb-3 col-4 m-3">
                 <label for="name">Name</label>
                <input type="text" class="form-control" name="name" id="name" value="<%=ground.name%>">
            </div>
            <div class="mb-3 col-4 m-3">
                <label for="location">Location</label>   
                <input type="text" class="form-control" name="location" id="location" value="<%=ground.location%>">
            </div>
            <div class="mb-3 col-5 m-3">
                <label for="Image">Image Url:</label>   
                <input type="text" class="form-control" name="imageUrl" id="Image" value="<%=ground.image%>">
            </div>
            <div class="mb-3 col-5 m-3">
                <label for="price">Price</label>   
                <input type="number" class="form-control" name="price" id="price" min="1" max="99" value="<%=ground.price%>">
            </div>
            <div class="col-8 row m-3">
            <label class="col m-3" for="discription">Discription</label>
        <textarea class="col-11"  name="discription" id="discription" rows="7" cols="40">
            <%= ground.discription%> 
        </textarea>
    </div>
    <div class="col-7 row m-3">
        <button class="btn btn-primary col-3">Submit</button>
    </div></form>
</div>