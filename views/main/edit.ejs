<% layout('layouts/layout') -%>
<div class="form-control row">
    <form class="row col-6 ps-3 needs-validation offset-3" novalidate action="/campgrounds/<%= ground._id%>?_method=patch"
        method="post">
        <div class="mb-3 col-5 m-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name" value="<%=ground.name%>" required>
            <div class="invalid-feedback">
                You an Idiot?
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3 col-5 m-3">
            <label for="location">Location</label>
            <input type="text" class="form-control" name="location" id="location" value="<%=ground.location%>" required>
            <div class="invalid-feedback">
                You an Idiot?
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3 col-5 m-3">
            <label for="Image">Image Url:</label>
            <input type="text" class="form-control" name="image" id="Image" value="<%=ground.image%>" required>
            <div class="invalid-feedback">
                You an Idiot?
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3 col-5 m-3">
            <label for="price">Price</label>
            <input type="number" class="form-control" name="price" id="price" min="1" max="99" value="<%=ground.price%>"
                required>
            <div class="invalid-feedback">
                You an Idiot?
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="col-8 row m-3">
            <label class="col m-3" for="description">Description</label>
            <textarea class="col-11 form-control" name="description" id="description" rows="7" cols="40"
                required><%=ground.description%></textarea>
            <div class="invalid-feedback">
                You an Idiot?
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="col-7 row m-3">
            <button class="btn btn-primary col-3">Submit</button>

        </div>
    </form>

    </div>

    </div>
    <a class="btn btn-primary col-4 m-3" href="/campgrounds/<%= ground._id%>">back</a>